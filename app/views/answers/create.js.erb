$('.answer-errors').html('<%= render 'shared/errors', resource: @answer %>');

<% if @answer.persisted? %>
  $('.answers').append('<%= j render @answer %>');
  $('.new-answer #answer_body').val('');
  $('.new-answer .nested-fields input[type=text], .new-answer .nested-fields input[type=url]').val('');
  $('.new-answer .nested-fields').hide();
<% end %>
