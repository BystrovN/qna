.links
  - if object.links.any?
    p Links:
    ul
      - object.links.each do |link|
        li id="link_#{link.id}"
          = link_to link.name, link.url, class: (link.gist? ? 'gist-link' : '')
          - if can?(:destroy, link)
            = link_to 'X', link_path(link), method: :delete, remote: true, class: 'delete-link'
